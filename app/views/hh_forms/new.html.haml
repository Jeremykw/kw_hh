.container
	= form_tag method: :post, :role => "form" do	
		-# name
		.row
			.col_one_third
				= label :hh_form, :first_name, "first_name"
				= text_field :hh_form, :first_name, :class => "form-control"
			.col_one_third
				= label :hh_form, :last_name, "last_name"
				= text_field :hh_form, :last_name, :class => "form-control"
		.row
			-# address
			.col_one_third	 
				= label :hh_form, :address_1, "address_1"
				= text_field :hh_form, :address_1, :class => "form-control"

				= label :hh_form, :address_2, "address_2"
				= text_field :hh_form, :address_2, :class => "form-control"

				= label :hh_form, :city, "city"
				= text_field :hh_form, :city, :class => "form-control"

				= label :hh_form, :provance, "provance"
				= text_field :hh_form, :provance, :class => "form-control"

				= label :hh_form, :postal_code, "postal_code"
				= text_field :hh_form, :postal_code, :class => "form-control"
			-# contact
			.col_one_third
				= label :hh_form, :email , "email"
				= text_field :hh_form, :email , :class => "form-control"

				= label :hh_form, :phone , "phone"
				= text_field :hh_form, :phone, :class => "form-control"

				= label :hh_form, :occupation, "occupation"
				= text_field :hh_form, :occupation, :class => "form-control"

				= label :hh_form, :referral_source, "referral_source"
				= text_field :hh_form, :referral_source, :class => "form-control"
				%br
				= label :hh_form, :date_of_birth, "date_of_birth "
				= select_date Date.today, hh_form: :date_of_birth, :class => "form-control"

		.row
			-# complaints and massage history
			.col_one_third
				= label :hh_form, :primary_complaint, "primary_complaint"
				= text_field :hh_form, :primary_complaint, :class => "form-control"

				= label :hh_form, :secondary_complaint, "secondary_complaint"
				= text_field :hh_form, :secondary_complaint, :class => "form-control"

				= label :hh_form, :previous_massage_therapy, "previous_massage_therapy"
				= text_field :hh_form, :previous_massage_therapy, :class => "form-control"

				= label :hh_form, :previous_massage_note, "previous_massage_note"
				= text_area_tag :hh_form, :previous_massage_note, :class => "form-control", :rows => "3"
			-# general health
			.col_one_third
				= label :hh_form, :general_health_status, "general_health_status"
				= text_field :hh_form, :general_health_status

				= label :hh_form, :smoke, "smoke"
				= check_box_tag "hh_form[smoke]"

				= label :hh_form, :sports, "sports"
				= text_area_tag :hh_form, :sportste

		-# check boxes
		.row
			.col_one_fifth
				%h4 Respiratory
				= check_box_tag "hh_form[chronic_cough]", :class => "checkbox"
				= label :hh_form, :chronic_cough, "chronic_cough"
				%br
				= check_box_tag "hh_form[shortness_of_breath]", :class => "checkbox"
				= label :hh_form, :shortness_of_breath, "shortness_of_breath"
				%br
				= check_box_tag "hh_form[bronchitis]", :class => "checkbox"
				= label :hh_form, :bronchitis, "bronchitis"
				%br
				= check_box_tag "hh_form[asthma]", :class => "checkbox"
				= label :hh_form, :asthma, "asthma"
				%br
				= check_box_tag "hh_form[emphysema]"
				= label :hh_form, :emphysema, "emphysema"
				%br
				%h4.topmargin-sm Skin
				= check_box_tag "hh_form[skin_condition]"
				= label :hh_form, :skin_condition, "skin_condition"
			.col_one_fifth
				%h4 Cardiovascular
				= check_box_tag "hh_form[high_bp]"
				= label :hh_form, :high_bp, "high_bp"
				%br
				= check_box_tag "hh_form[low_bp]"
				= label :hh_form, :low_bp, "low_bp"
				%br
				= check_box_tag "hh_form[cchf]"
				= label :hh_form, :cchf, "cchf"
				%br
				= check_box_tag "hh_form[heat_attack]"
				= label :hh_form, :heat_attack, "heat_attack"
				%br
				= check_box_tag "hh_form[phlebitis]"
				= label :hh_form, :phlebitis, "phlebitis"
				%br
				= check_box_tag "hh_form[stroke_CVA]"
				= label :hh_form, :stroke_CVA, "stroke_CVA"
				%br
				= check_box_tag "hh_form[pacemaker]"
