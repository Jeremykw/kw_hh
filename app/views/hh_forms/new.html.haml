				%br
				= check_box_tag "hh_form[heart_disease]"
				= label :hh_form, :heart_disease, "heart_disease"
				%br
			.col_one_fifth
				%h4 Other Conditions
				= check_box_tag "hh_form[loss_of_sensation]"
				= label :hh_form, :loss_of_sensation, "loss_of_sensation"
				%br
				= check_box_tag "hh_form[diabetes]"
