.container
	= form_for @hhform do |f|
		-# name
		.row
			.col_one_third.testimonial
				= f.label :first_name, "first_name"
				= f.text_field :first_name, :class => "form-control"
			.col_one_third.testimonial
				= f.label :last_name, "last_name"
				= f.text_field :last_name, :class => "form-control"
		.row
			-# address
			.col_one_third.testimonial
				= f.label :address_1, "address_1"
				= f.text_field :address_1, :class => "form-control"

				= f.label :address_2, "address_2"
				= f.text_field :address_2, :class => "form-control"

				= f.label :city, "city"
				= f.text_field :city, :class => "form-control"

				= f.label :provance, "provance"
				= f.text_field :provance, :class => "form-control"

				= f.label :postal_code, "postal_code"
				= f.text_field :postal_code, :class => "form-control"
			-# contact
			.col_one_third.testimonial
				= f.label :email , "email"
				= f.text_field :email , :class => "form-control"

				= f.label :phone , "phone"
				= f.text_field :phone, :class => "form-control"

				= f.label :occupation, "occupation"
				= f.text_field :occupation, :class => "form-control"

				= f.label :referral_source, "referral_source"
				= f.text_field :referral_source, :class => "form-control"
				%br
				= f.label :date_of_birth, "date_of_birth "
				= f.date_select :date_of_birth, :start_year => 1925, :class => "form-control"

		.row
			-# complaints and massage history
			.col_one_third.testimonial
				= f.label :primary_complaint, "primary_complaint"
				= f.text_field :primary_complaint, :class => "form-control"

				= f.label :secondary_complaint, "secondary_complaint"
				= f.text_field :secondary_complaint, :class => "form-control"

				= f.label :previous_massage_therapy, "previous_massage_therapy"
				= f.text_field :previous_massage_therapy, :class => "form-control"

				= f.label :previous_massage_note, "previous_massage_note"
				= f.text_area :previous_massage_note, :class => "form-control", :rows => "3", :placeholder => "Tell me about previous therapys"
			-# general health
			.col_one_third.testimonial
				= f.label :sports, "sports"
				= f.text_area :sports, :class => "form-control", :rows => "3"
				%br
				= f.check_box :smoke
				= f.label :smoke, "Do you smoke?"
				%br
				= f.label :physician, "Physicians Name"
				= text_field :hhform, :physician, :class => "form-control"
				%br
				= f.label :physician_address, "Physician Address"
				= text_field :hhform, :physician_address, :class => "form-control", :class => "form-control"				

		-# check boxes
		.row
			.col_one_fifth.testimonial.test-wider
				%h4 Respiratory
				= f.check_box :chronic_cough
				= f.label :chronic_cough, "chronic_cough"
				%br
				= f.check_box :shortness_of_breath
				= f.label :shortness_of_breath, "shortness_of_breath"
				%br
				= f.check_box :bronchitis
				= f.label :bronchitis, "bronchitis"
				%br
				= f.check_box :asthma
				= f.label :asthma, "asthma"
				%br
				= f.check_box :emphysema
				= f.label :emphysema, "emphysema"
				%br
				%h4.topmargin-sm Skin
				= f.check_box :skin_condition
				= f.label :skin_condition, "skin_condition"
			.col_one_fifth.testimonial.test-wider
				%h4 Cardiovascular
				= f.check_box :high_bp
				= f.label :high_bp, "high_bp"
				%br
				= f.check_box :low_bp
				= f.label :low_bp, "low_bp"
				%br
				= f.check_box :cchf
				= f.label :cchf, "cchf"
				%br
				= f.check_box :heat_attack
				= f.label :heat_attack, "heat_attack"
				%br
				= f.check_box :phlebitis
				= f.label :phlebitis, "phlebitis"
				%br
				= f.check_box :stroke_CVA
				= f.label :stroke_CVA, "stroke_CVA"
				%br
				= f.check_box :pacemaker
				= f.label :pacemaker, "pacemaker"
				%br
				= f.check_box :heart_disease
				= f.label :heart_disease, "heart_disease"
				%br
			.col_one_fifth.testimonial.test-wider
				%h4 Other Conditions
				= f.check_box :loss_of_sensation
				= f.label :loss_of_sensation, "loss_of_sensation"
				%br
				= f.check_box :diabetes
				= f.label :diabetes, "diabetes"
				%br
				= f.check_box :diabetes_onset
				= f.label :diabetes_onset, "diabetes_onset"
				%br
				= f.check_box :allergies
				= f.label :allergies, "allergies"
				%br
				= f.check_box :epilepsy
				= f.label :epilepsy, "epilepsy"
				%br
				= f.check_box :cancer
				= f.label :cancer, "cancer"
				%br
				= f.check_box :arthritis
				= f.label :arthritis, "arthritis"
				%br
				= f.check_box :digestive_conditions
				= f.label :digestive_conditions, "digestive_conditions"
				%br
				= f.check_box :osteoporosis
				= f.label :osteoporosis, "osteoporosis"
				%br
			


		.row
			.col_one_fifth.testimonial
				%h4 HeaNeck
				= f.check_box :vision_problems
				= f.label :vision_problems, "vision_problems"
				%br
				= f.check_box :vision_loss
				= f.label :vision_loss, "vision_loss"
				%br
				= f.check_box :ear_problems
				= f.label :ear_problems, "ear_problems"
				%br
				= f.check_box :hearing_loss
				= f.label :hearing_loss, "hearing_loss"
				%br	    	
			.col_one_fifth.testimonial
				%h4 Infections
				= f.check_box :hepatitis
				= f.label :hepatitis, "hepatitis"
				%br
				= f.check_box :infectious_skin_condition
				= f.label :infectious_skin_condition, "infectious_skin_condition"
				%br
				= f.check_box :tb
				= f.label :tb, "tb"
				%br
				= f.check_box :hiv
				= f.label :hiv, "hiv"
				%br	    	
			.col_one_fifth.testimonial
				%h4 Women
				= f.check_box :pregnant
				= f.label :pregnant, "pregnant"
				%br
				= f.label :pregnant_due_date, "Due Date"
				%br
				= f.date_select :pregnant_due_date, :start_year => 2016, :class => "form-control"
		-# Head Neck and shoulders
		.row
			.col_one_fifth.testimonial
				= f.check_box :neck
				= f.label :neck, "neck"
				= f.text_area :neck_note, :class => "form-control", placeholder: "More Details about neck"

				= f.check_box :low_back
				= f.label :low_back, "low_back"	
				= f.text_area :low_back_note, :class => "form-control", placeholder: "More Details about low back"

				= f.check_box :mid_back
				= f.label :mid_back, "mid_back"		
				= f.text_area :mid_back_note, :class => "form-control", placeholder: "More Details about mid back"
			.col_one_fifth.testimonial 	 
				= f.check_box :upper_back
				= f.label :upper_back, "upper_back"
				= f.text_area :upper_back_note, :class => "form-control", placeholder: "More Details about upper back"

				= f.check_box :shoulders
				= f.label :shoulders, "shoulders"
				= f.text_area :shoulders_note, :class => "form-control", placeholder: "More Details about shoulders"

				= f.check_box :arms
				= f.label :arms, "arms"
				= f.text_area :arms_note, :class => "form-control", placeholder: "More Details about arms"
			.col_one_fifth.testimonial
				= f.check_box :legs
				= f.label :legs, "legs"
				= f.text_area :legs_note, :class => "form-control", placeholder: "More Details about legs"

				= f.check_box :knees
				= f.label :knees, "knees"
				= f.text_area :knees_note, :class => "form-control", placeholder: "More Details about knees"

				= f.check_box :other
				= f.label :other, "other"
				= f.text_area :other_note, :class => "form-control", placeholder: "More Details about other"




		.row
			.col_one_third.testimonial
				= f.label :current_medications, "Current Medications"
				= f.text_area :current_medications, :class => "form-control", :placeholder => "List current medications and what they treat"
				%br
				= f.label :surgery, "Surgeries"
				= f.text_area :surgery, :class => "form-control", :placeholder => "Discribe any past surgeries and when they were preformed."
				%br
				= f.label :injuries, "Injuries"
				= f.text_area :injuries, :class => "form-control", :placeholder => "Discribe any relevant injuries and when they happened"
				%br

				= f.label :general_health_status, "general_health_status"
				= f.text_field :general_health_status, :class => "form-control"
			.col_one_third.testimonial
				= f.label :other_healthcare_list, "Other Healthcare List"
				= f.text_area :other_healthcare_list, :class => "form-control", :placeholder => "Discribe other healthcare services you are currently involved in."
				%br
				= f.label :other_medical_conditions, "Other Medical Conditions"
				= f.text_area :other_medical_conditions, :class => "form-control", :placeholder => "List any other medical conditions you have."
				%br
				= f.label :special_notes, "Special Notes"
				= f.text_area :special_notes, :class => "form-control", :placeholder => "Presence of internal pins, wires, artificial joints, special equipment..."
				%br
				= f.label :mental_condition_note, "Mental Conditions"
				= f.text_field :mental_condition_note, :class => "form-control", :placeholder => "Discribe any mental conditions you might have."

		= f.submit "Save"